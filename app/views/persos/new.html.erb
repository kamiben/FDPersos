


<% form_for @perso do |f| %>

<%= f.label :nom %>: <%= f.text_field :nom,  :size => 10 %> 
<%= f.label :joueur %>: <%= f.text_field :joueur,  :size => 10 %> <br />
<%= @perso.attributs.each do |attribut| %>
  <%= fields_for "attribut[#{attribut.nom}]" do |f| %>
    <p><%= f.label attribut.nom%> : <%= f.text_field :val %></p>
  <% end %>
<% end %>
<%= submit_tag %>
<%= link_to 'Back', persos_path %>
<% end %> 

